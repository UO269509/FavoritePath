<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coleccionesLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="390dp"
            android:layout_height="544dp"
            android:contentDescription="colecciones y rutas"
            app:layout_constraintBottom_toTopOf="@+id/rutaBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.731" />

        <Button
            android:id="@+id/rutaBtn"
            android:layout_width="419dp"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/botones"
            android:minHeight="48dp"
            android:text="A침adir Ruta"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="414dp"
            android:layout_height="59dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/editTextColeccion"
                android:layout_width="216dp"
                android:layout_height="match_parent"
                android:hint="Nueva Colecci칩n"
                android:inputType="text"
                android:minHeight="48dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/coleccionBtn"
                android:layout_width="198dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/botones"
                android:minHeight="48dp"
                android:text="A침adir Colecci칩n"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>